{
  "name": "vite-template-wordpress",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "wp:start": "cd wordpress && wp-env start",
    "wp:stop": "cd wordpress && wp-env stop",
    "wp:destroy": "cd wordpress && wp-env destroy",
    "vite:dev": "cd vite-app && vite",
    "vite:build": "cd vite-app && vite build",
    "vite:preview": "cd vite-app && vite preview",
    "lint": "biome check .",
    "fix": "biome format . --write",
    "dev": "concurrently \"npm run wp:start\" \"npm run vite:dev\""
  },
  "devDependencies": {
    "@wordpress/env": "^10.35.0",
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "typescript": "^5.9.3",
    "concurrently": "^9.2.1",
    "sass": "^1.93.3",
    "sharp": "^0.34.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.2",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-checker": "^0.11.0"
  }
}